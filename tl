<!DOCTYPE html>
<html>
<head>
    
</head>
<body>
    <button id="share-location">Share Location</button>
<p id="location-text"></p>

<script>
  const shareLocationButton = document.getElementById("share-location");
  const locationText = document.getElementById("location-text");

  shareLocationButton.addEventListener("click", () => {
    navigator.geolocation.getCurrentPosition(
      (position) => {
        const latitude = position.coords.latitude;
        const longitude = position.coords.longitude;
        locationText.textContent = `Your Latitude: ${latitude}, Longitude: ${longitude}`;
      },
      (error) => {
        locationText.textContent = "Error: " + error.message;
      }
    );
  });
</script>
</body>
</html>
